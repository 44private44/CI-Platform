@{
     Layout = "_Login_Layout";
    ViewData["Title"] = "Register Yourself";
}

<body>
    
            <div class="registration-section">
                <div class="mt-3 formdiv">
                    <form action="/action_page.php" class="formcontent">
                        <div class="mb-3 mt-3">
                            <label class="formlabels" for="fname">First Name</label>
                            <input type="text" class="form-control" id="fnmae" placeholder="Enter first name" name="fname" value="evan">
                        </div>
                        <div class="mb-3 mt-3">
                            <label class="formlabels" for="lname">Last Name</label>
                            <input type="text" class="form-control" id="lname" placeholder="Enter last name" name="lname" value="donohue">
                        </div>
                        <div class="mb-3 mt-3">
                            <label class="formlabels" for="phone-number">Phone Number</label>
                            <input type="number" class="form-control" id="phone-number" placeholder="Enter phone number" name="phone-number" value="8923454615">
                        </div>
                        <div class="mb-3 mt-3">
                            <label class="formlabels" for="email">Email Address</label>
                            <input type="email" class="form-control" id="email" placeholder="Enter email" name="email" value="evan.donohue@gmail.com">
                        </div>
                        <div class="mb-3">
                            <label class="formlabels" for="pwd">Password</label>
                            <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="pswd" value="varun">
                        </div>
                        <div class="mb-3">
                            <label class="formlabels" for="re-pwd">Confirm Password</label>
                            <input type="password" class="form-control" id="re-pwd" placeholder="Reenter password" name="re-pwd" value="varun">
                        </div>
                        <button type="submit" class="btn mt-3 registrationbtn">Register</button>
                        <p><a class="lost-password" asp-controller="Home" asp-action="Forgot_Password">Lost your password?</a></p>
                        <p>Already registered? <a class="create-account" asp-controller="Home" asp-action="Index">Login</a></p>
                    </form>
                    <p class="privacy"><a href="#">Privacy Policy</a></p>
                </div>
            </div>
    <script src="js/registration.js"></script>
</body>